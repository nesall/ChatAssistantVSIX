 <Window x:Class="ChatAssistantVSIX.Dialogs.StatsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="220" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="API Key" Margin="0,0,0,4"/>
            <TextBox x:Name="ApiKeyTextBox" MinWidth="300"/>
            <CheckBox x:Name="EnableFeatureCheckBox" Content="Enable feature X" Margin="0,8,0,0"/>
        </StackPanel>

        <TextBlock Grid.Row="1" Text="Optional description or advanced controls go here." TextWrapping="Wrap" Foreground="Gray"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="90" Margin="4,0" IsDefault="True" Click="Ok_Click">OK</Button>
            <Button Width="90" Margin="4,0" IsCancel="True" Click="Cancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
