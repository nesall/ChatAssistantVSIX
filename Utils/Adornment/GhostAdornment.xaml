<Border x:Class="ChatAssistantVSIX.Utils.Adornment.GhostAdornment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
        Background="{DynamicResource {x:Static vsshell:VsBrushes.DropDownBackgroundKey}}"
        BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.GrayTextKey}}"
        BorderThickness="1"
        CornerRadius="2"
        Padding="4,2,4,2">

    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
        <!-- Accept/Reject buttons -->
        <StackPanel Orientation="Horizontal" Margin="0,0,6,0">
            <Button x:Name="AcceptButton" 
                    Content="✓" 
                    Width="16" 
                    Height="16" 
                    FontSize="10"
                    Margin="0,0,2,0"
                    ToolTip="Accept suggestion (Tab)"
                    Cursor="Arrow"
                    Click="AcceptButton_Click"/>
            <Button x:Name="RejectButton" 
                    Content="✗" 
                    Width="16" 
                    Height="16" 
                    FontSize="10"
                    ToolTip="Reject suggestion (Esc)"
                    Cursor="Arrow"
                    Click="RejectButton_Click"/>
        </StackPanel>

        <!-- Text content -->
        <TextBlock x:Name="ContentText"
                   FontStyle="Italic"
                   Foreground="{DynamicResource {x:Static vsshell:VsBrushes.GrayTextKey}}"
                   TextOptions.TextFormattingMode="Display"
                   VerticalAlignment="Center"/>
    </StackPanel>
</Border>
